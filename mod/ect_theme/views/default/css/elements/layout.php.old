/* ***************************************
	PAGE LAYOUT
*************************************** */
/***** DEFAULT LAYOUT ******/
<?php // the width is on the page rather than topbar to handle small viewports ?>
.elgg-page-default {
	min-width: 998px;
}
.elgg-page-default .elgg-page-header > .elgg-inner {
	width: 990px;
	margin: 0 auto;
	height: 90px;
    padding-top:10px;
    padding-bottom:50px;
    padding-left: 40px;
}
.elgg-page-default .elgg-page-body > .elgg-inner {
	width: 990px;
    margin: 25px auto;
    padding-left: 20px;
    padding-right: 20px;
    border: 2px solid #E8E8E8;
    background-color: #F4F4F4;
}
.elgg-page-default .elgg-page-footer > .elgg-inner {
	width: 990px;
	margin: 0 auto;
	padding: 5px 0;
	border-top: 1px solid #DEDEDE;
}

/***** TOPBAR ******/
.elgg-page-topbar {
	background: #333333 url(<?php echo elgg_get_site_url(); ?>_graphics/toptoolbar_background.gif) repeat-x top left;
	border-bottom: 1px solid #000000;
	position: relative;
	height: 24px;
	z-index: 9000;
    margin-bottom: 20px;
}
.elgg-page-topbar > .elgg-inner {
	padding: 0 10px;
}

/***** PAGE MESSAGES ******/
.elgg-system-messages {
	position: fixed;
	left: 35%;
	max-width: 500px;
	z-index: 2000;
    top: 20px;
}
.elgg-system-messages li {
	margin-top: 10px;
}
.elgg-system-messages li p {
	margin: 0;
}

/***** PAGE HEADER ******/
.elgg-page-header {
	position: relative;
	background: #FFFFFF;
}
.elgg-page-header > .elgg-inner {
	position: relative;
}

#wrapper_header {
    margin: 0 auto;
    min-width: 890px;
    width: 100%;
}
.left-side {
    float: left;
    width: 36%;
    padding-top: 25px;
}
.right-side {
    float: right;
    text-align: right;
    padding-top: 30px;
}

#wrapper_header h1, #wrapper_header h2 {
    margin: 0;
}
#wrapper_header h1 a {
    color: #00539F;
    font-family: 'Trebuchet MS';
    font-size: 38px;
    line-height: 25px
}
#wrapper_header h2 a {
    margin-left: 50px;
    color: #00539F;
    font-family: 'Trebuchet MS';
    font-size: 1.3em;
    line-height: 0px;
}

/***** PAGE BODY LAYOUT ******/

.elgg-page-body {
    padding-left: 45px;
}

.elgg-layout {
	min-height: 360px;
    margin-top: 15px;
    margin-bottom: 15px;
}
.elgg-layout-one-sidebar {
	background: transparent url(<?php echo elgg_get_site_url(); ?>mod/ect_theme/graphics/sidebar_left_background.gif) repeat-y right top;
}
.elgg-layout-two-sidebar {
	background: transparent url(<?php echo elgg_get_site_url(); ?>_graphics/two_sidebar_background.gif) repeat-y right top;
}
.elgg-sidebar {
	position: relative;
	padding: 10px;
	float: left;
	width: 215px;
	margin: 0 0 0 5px;
}
.elgg-sidebar-alt {
	position: relative;
	padding: 20px 10px;
	float: left;
	width: 160px;
	margin: 0 10px 0 0;
}

.elgg-sidebar > ul > .elgg-menu-item-bookmark {
    float:right;
    padding-right: 10px;
}

.elgg-sidebar > ul > .elgg-menu-item-rss {
    float:right;
}

#twitter_widget {
    margin: 0px !important;
}

#twitter_widget li > a {
    margin: 0 7px 0 4px !important;
    text-align: right !important;
}

.elgg-main {
	position: relative;
	min-height: 360px;
	padding: 10px;
}
.elgg-main > .elgg-head {
	padding-bottom: 3px;
	border-bottom: 1px solid #CCCCCC;
	margin-bottom: 10px;
	margin-top: 10px;
}

#ask_status {
    font-weight: bold;
    margin-top: 10px;
    top: 10px;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 120%;
}

/***** PAGE FOOTER ******/
.elgg-page-footer {
	position: relative;
}
.elgg-page-footer {
	color: #999;
}
.elgg-page-footer a:hover {
	color: #666;
}
